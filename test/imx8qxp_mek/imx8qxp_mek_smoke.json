{
    "actions": [
        {
            "command": "deploy_linaro_kernel",
            "parameters": {
                "kernel": "http://shlinux22.ap.freescale.net/internal-only/Linux_IMX_4.9_morty_trunk_next/latest/common_bsp/Image-imx8qxpmek.bin",
                "dtb": "http://shlinux22.ap.freescale.net/internal-only/Linux_IMX_4.9_morty_trunk_next/latest/common_bsp/Image-fsl-imx8qxp-mek.dtb",
		"nfsrootfs": "file:///nfsroot/imx8qxp_mek/imx8qxpmek.tar.bz2", 
                "login_prompt": "imx8qxpmek login:",
                "username": "root"
            }
        },
        {
            "command": "boot_linaro_image",
            "parameters": {
                "test_image_prompt": "root@imx8qxpmek:~#"
            }
        },
	{
	    "command": "lava_test_shell",
	    "parameters": {
		"testdef_repos": [
		    {
			"git-repo": "git://git.linaro.org/qa/test-definitions.git",
			"testdef": "automated/linux/smoke/smoke.yaml"
		    },
		{
			"git-repo": "git://git.linaro.org/qa/test-definitions.git",
			"testdef": "automated/linux/smoke/smoke.yaml"
		}
		],
		"timeout": 90000
	    }
	},
	{
            "command": "submit_results_on_host",
            "parameters": {
                "server": "http://10.192.242.176/RPC2/",
                "stream": "/anonymous/admin/"
            }
        }
    ],
    "job_name": "imx8qxp-mek-smoke-test",
    "target": "imx8qxp-mek",
    "timeout": 3600
}
